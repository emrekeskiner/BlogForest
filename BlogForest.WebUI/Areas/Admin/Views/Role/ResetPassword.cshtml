@model ResetPasswordViewModel
@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="table-responsive p-3">
            <label class="display-6">Kullanıcı Adı : @ViewBag.UserName</label>
            <form method="post">
                <label>Yeni Şifre</label>
                <input type="password" asp-for="Password" class="form-control-range" />
                <input type="hidden" asp-for="UserId" class="form-control-range" />
                <br />
                <button class="btn btn-primary">Kaydet</button>
            </form>
         
        </div>
    </div>
</div>


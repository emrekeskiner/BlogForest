@model List<AppRole>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="table-responsive p-3">
            <table class="table align-items-center table-flush" id="dataTable">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Role Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>

                        </tr>
                    }


                </tbody>
            </table>
            <a href="/Admin/Role/CreateRole" class="btn btn-info">Yeni Rol Girişi</a>
        </div>
    </div>
</div>


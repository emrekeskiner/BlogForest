@model UpdateRoleViewModel

@{
    ViewData["Title"] = "Rol Güncelle";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="table-responsive p-3">
            <form method="post">
                <input type="hidden" asp-for="RoleId" />
                <label>Rol Adı</label>
                <input type="text" asp-for="RoleName" class="form-control-range" />
                <br />
                <button class="btn btn-warning">Güncelle</button>
            </form>
        </div>
    </div>
</div>

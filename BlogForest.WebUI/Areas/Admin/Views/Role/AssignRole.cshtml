@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "Yetkilendirme Sayfası";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="table-responsive p-3">
            <label class="display-5">Kullanıcı Adı : <span>@ViewBag.UserName</span></label>
            <form method="post">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="checkbox" asp-for="@Model[i].RoleExist" />
                        <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                    </div>

                }

                <button type="submit" class="btn btn-primary">Kaydet</button>

            </form>
        </div>
    </div>
</div>
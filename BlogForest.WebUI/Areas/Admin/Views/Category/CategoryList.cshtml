@model List<CategoryResultDto>
@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="col-xl-12 col-lg-7 mb-4">
    <div class="card">

        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a>
                            </td>
                           </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Category/CreateCategory" class="btn btn-info mb-1">Yeni Kategori</a>
        </div>
        <div class="card-footer"></div>
    </div>
</div>


@model BlogForest.DtoLayer.BlogDtos.UpdateBlogDto
@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="card mb-4">

    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="BlogId" />
            <input type="hidden" asp-for="AppUserId" />
            <input type="hidden" asp-for="CreatedDate" />
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control" asp-for="Title" required>
            </div>
            <div class="form-group">
                <label>Kategori</label>
                @Html.DropDownListFor(m => m.CategoryId, (List<SelectListItem>)ViewBag.category, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label>Kapak Resmi Url</label>
                <input type="text" class="form-control" asp-for="ThumbnailImageUrl" required>
            </div>
            <div class="form-group">
                <label>Resim Url</label>
                <input type="text" class="form-control" asp-for="CoverImageUrl" required>
            </div>
            <div class="form-group">
                <label>Blog Yazısı</label>
                <textarea class="form-control" asp-for="Description" rows="3" required></textarea>
            </div>
            <button class="btn btn-primary"> Güncelle</button>
        </form>
    </div>
</div>


@model List<BlogForest.EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Bloglar";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card mb-4">
        <div class="table-responsive p-3">
            <table class="table align-items-center table-flush" id="dataTable">
                <thead class="thead-light">
                    <tr>
                        <th>Görsel</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Gösterim Sayısı</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img class="img-profile" src="@item.CoverImageUrl" style="max-width: 60px" alt="@item.Title"></td>
                            <td>@item.Title</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.ViewCount</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.Status == false)
                                {
                                    <a class="btn btn-dark" href="/Writer/Blog/ChangeStatusMyBlog/@item.BlogId">Pasif <i class="fas fa-exclamation-triangle" style="color:white;"></i> </a>

                                }
                                else
                                {
                                    <a class="btn btn-success" href="/Writer/Blog/ChangeStatusMyBlog/@item.BlogId">Aktif <i class="fas fa-check" style="color:white;"></i></a>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/Writer/Blog/UpdateMyBlog/@item.BlogId"><i class="fas fa-edit" style="color:white;"></i></a>
                                <a class="btn btn-danger" href="/Writer/Blog/DeleteMyBlog/@item.BlogId"><i class="fas fa-trash" style="color:white;"></i></a>
                                <a class="btn btn-success" href="/Blog/BlogDetail/@item.BlogId"><i class="fas fa-eye" style="color:white;"></i></a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

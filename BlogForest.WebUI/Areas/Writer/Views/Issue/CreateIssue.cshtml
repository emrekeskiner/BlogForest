@model BlogForest.DtoLayer.IssueDto.CreateWriterIssueDto
@{
    ViewData["Title"] = "Sorun Bildir";
    Layout = "~/Views/Layout/_WriterLayout.cshtml";
}

<div class="card mb-4">

    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control" asp-for="Title" required>
            </div>
           
            <div class="form-group">
                <label>Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="3" required></textarea>
            </div>
            <button class="btn btn-primary"> Kaydet</button>
        </form>
    </div>
</div>


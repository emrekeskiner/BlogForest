
@{
   Layout = "~/Views/Shared/_BlogLayout.cshtml";
}


<div class="container mt-4">
    <div class="row">
        <!-- Sol Panel -->
        <div class="col-md-6">
            <h6>Our Office</h6>
            <p><strong><i class="fa-solid fa-address-book text-primary"></i> Address:</strong> 123 Main Street, Springfield, USA</p>
            <p><strong><i class="fa-solid fa-phone text-primary"></i> Phone:</strong> +1 234 567 890</p>
            <p><strong><i class="fa-solid fa-envelope text-primary"></i> Email:</strong> info@example.com</p>
            <div class="map-responsive">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8354345092397!2d-122.42165868468191!3d37.77492977975919!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085809c5fbedecd%3A0x580647d0d9b98a78!2s123+Main+St%2C+San+Francisco%2C+CA+94105%2C+USA!5e0!3m2!1sen!2s!4v1600000000000!5m2!1sen!2s"
                        width="100%" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>

        <!-- Sağ Panel -->
        <div class="col-md-6">
            <h6>Contact Form</h6>
            <form id="contactForm" method="post" action="/submitcontact">
                <div class="form-group my-3">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
                </div>
                <div class="form-group my-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" required>
                </div>
                <div class="form-group my-2">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Entity Güncelleme</title>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Entity Güncelleme</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <!-- Name -->
                            <div class="mb-3">
                                <label for="name" class="form-label">Ad</label>
                                <input type="text" id="name" name="Name" class="form-control" placeholder="Adınızı girin" required>
                            </div>

                            <!-- Surname -->
                            <div class="mb-3">
                                <label for="surname" class="form-label">Soyad</label>
                                <input type="text" id="surname" name="Surname" class="form-control" placeholder="Soyadınızı girin" required>
                            </div>

                            <!-- ImageUrl -->
                            <div class="mb-3">
                                <label for="imageUrl" class="form-label">Profil Resmi</label>
                                <input type="file" id="imageUrl" name="ImageUrl" class="form-control">
                                <small class="text-muted">Desteklenen formatlar: jpg, png, jpeg.</small>
                            </div>

                            <!-- Description -->
                            <div class="mb-3">
                                <label for="description" class="form-label">Açıklama</label>
                                <textarea id="description" name="Description" class="form-control" rows="4" placeholder="Açıklama girin"></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                                <a href="/" class="btn btn-secondary ms-2">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

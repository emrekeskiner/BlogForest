@model List<AppRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<h1>Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Role Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Role/CreateRole" class="btn btn-info">Yeni Rol Girişi</a>
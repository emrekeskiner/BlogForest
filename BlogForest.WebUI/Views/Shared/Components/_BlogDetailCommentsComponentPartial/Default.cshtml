@model List<Comment>

<div class="custombox clearfix">
    <h4 class="small-title">@ViewBag.commentSum Yorum</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="comments-list">
                @foreach(var item in Model)
                {
                <div class="media">
                    <a class="media-left" href="#">
                        <img src="~/forest-time/upload/author.jpg" alt="" class="rounded-circle">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading user_name">@item.NameSurname <small>@item.CommentDate.ToString("dd.MMM.yyyy")</small></h4>
                        <p>@item.Detail</p>
                        
                    </div>
                    </div>
                }
            </div>
        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end custom-box -->
